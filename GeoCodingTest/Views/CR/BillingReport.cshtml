@model GeoCodingTest.Models.L1.mWGE

@Html.Raw(TempData["msg"])

<!-- jQuery UI CSS Reference -->
<link href="@Url.Content("~/Content/themes/base/minified/jquery-ui.min.css")" rel="stylesheet" />
<!-- Required jQuery and jQuery UI Javascript references -->
<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.10.4.min.js")"></script>
<!-- Code to wire up your DatePicker -->
<script type="text/javascript">
    $(function () {
        // This should targe the element generated by your EditorFor() Helper
        $('#CreatedOn').datepicker();
    })

    function yesnoCheck() {
        if (document.getElementById('Radios1').checked) {
            document.getElementById('ifOther').style.display = 'block';
        }
        else {
            document.getElementById('ifOther').style.display = 'none';
        }

    }
</script>

<div class="row">
    <div class="col-sm-12">

        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">รายงานใบวางบิล</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>

            @{
                if (Session["Position"].ToString() == "8")
                {
                    <div class="box-body">

                        @using (Html.BeginForm("BillingDownload"
                                    , "CR"
                                    , FormMethod.Post
                                    , new { id = "oForm" }))
                        {

                            <div class="form-group">
                                <div class="radio col-sm-12">
                                    <label>
                                        <input type="radio" name="optionsRadios0" id="Radios0" checked value="0" onclick="javascript:yesnoCheck();">
                                        เลือกทุกคน
                                    </label>
                                </div>
                                <div class="radio col-sm-12">
                                    <label>
                                        <input type="radio" name="optionsRadios0" id="Radios1" value="1" onclick="javascript:yesnoCheck();">
                                        ใส่รหัสพนักงาน
                                    </label>
                                </div>
                            </div>

                            <div class="form-group" id="ifOther" style="display:none">
                                <label for="inputEmail3">รหัสพนักงาน</label>
                                <input type="text" name="codeno" class="form-control" id="inputcode" placeholder="รหัสพนักงาน" value="@Session["Code"].ToString()">
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4" for="CreatedOn">เริ่มตั้งแต่ :</label>
                                <div class="col-sm-12">
                                    <input class="text-box single-line" data-val="true" data-val-date="The field CreatedOn must be a date." data-val-required="The CreatedOn field is required." id="CreatedOn" name="DateFrom" required type="date" value="" />
                                    <span class="field-validation-valid" data-valmsg-for="CreatedOn" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4" for="CreatedOn">ถึงวันที่ :</label>
                                <div class="col-sm-12">
                                    <input class="text-box single-line" data-val="true" data-val-date="The field CreatedOn must be a date." data-val-required="The CreatedOn field is required." id="CreatedOn" name="DateTo" required type="date" value="" />
                                    <span class="field-validation-valid" data-valmsg-for="CreatedOn" data-valmsg-replace="true"></span>
                                    <br />
                                </div>
                            </div>
                            <div class="radio col-sm-12">
                                <label>
                                    <input type="radio" name="optionsRadios1" id="optionsRadios1" checked value="1">
                                    Report (PDF)
                                </label>
                            </div>
                            <div class="radio col-sm-12">
                                <label>
                                    <input type="radio" name="optionsRadios1" id="optionsRadios1" value="2">
                                    Report (Excel)
                                </label>
                            </div>

                            <button type="submit" class="btn btn-info ">Submit</button>
                        }
                        <br />
                    </div>
                }
                else
                {
                    <div class="box-body">

                        @using (Html.BeginForm("BillingDownload"
                                    , "CR"
                                    , FormMethod.Post
                                    , new { id = "oForm" }))
                        {
                            <div class="form-group">
                                <label for="inputEmail3">รหัสพนักงาน</label>
                                <input type="text" name="codeno" class="form-control" readonly id="inputcode" placeholder="รหัสพนักงาน" value="@Session["Code"].ToString()">
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4" for="CreatedOn">เริ่มตั้งแต่ :</label>
                                <div class="col-sm-12">
                                    <input class="text-box single-line" data-val="true" data-val-date="The field CreatedOn must be a date." data-val-required="The CreatedOn field is required." id="CreatedOn" name="DateFrom" required type="date" value="" />
                                    <span class="field-validation-valid" data-valmsg-for="CreatedOn" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4" for="CreatedOn">ถึงวันที่ :</label>
                                <div class="col-sm-12">
                                    <input class="text-box single-line" data-val="true" data-val-date="The field CreatedOn must be a date." data-val-required="The CreatedOn field is required." id="CreatedOn" name="DateTo" required type="date" value="" />
                                    <span class="field-validation-valid" data-valmsg-for="CreatedOn" data-valmsg-replace="true"></span>
                                    <br />
                                </div>
                            </div>
                            <div class="radio col-sm-12">
                                <label>
                                    <input type="radio" name="optionsRadios1" id="optionsRadios1" checked value="1">
                                    Report (PDF)
                                </label>
                            </div>
                            <div class="radio col-sm-12">
                                <label>
                                    <input type="radio" name="optionsRadios1" id="optionsRadios1" value="2">
                                    Report (Excel)
                                </label>
                            </div>

                            <button type="submit" class="btn btn-info ">Submit</button>
                        }
                        <br />
                    </div>
                }
            }

        </div>
    </div>
</div>