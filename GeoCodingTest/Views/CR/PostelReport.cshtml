@model GeoCodingTest.Models.L1.mWGE

@Html.Raw(TempData["msg"])

<!-- jQuery UI CSS Reference -->
<link href="@Url.Content("~/Content/themes/base/minified/jquery-ui.min.css")" rel="stylesheet" />
<!-- Required jQuery and jQuery UI Javascript references -->
<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.10.4.min.js")"></script>
<!-- Code to wire up your DatePicker -->
<script type="text/javascript">
    $(function () {
        // This should targe the element generated by your EditorFor() Helper
        $('#CreatedOn').datepicker();
    })

    function yesnoCheck() {
        if (document.getElementById('Radios1').checked) {
            document.getElementById('ifOther').style.display = 'block';

            document.getElementById('ifOther2').style.display = 'block';
        }
        else {
            document.getElementById('ifOther').style.display = 'none';

            document.getElementById('ifOther2').style.display = 'none';
        }

    }
    function yesnoCheck2() {
        if (document.getElementById('Radios2').checked) {
            document.getElementById('ifOther3').style.display = 'none';
            document.getElementById('ifOther5').style.display = 'block';
            document.getElementById('ifOther6').style.display = 'block';
        }
        else {
            document.getElementById('ifOther3').style.display = 'block';
            document.getElementById('ifOther4').style.display = 'block';
            document.getElementById('ifOther5').style.display = 'none';
            document.getElementById('ifOther6').style.display = 'none';
            document.getElementById('ifOther7').style.display = 'none';
            document.getElementById('Radios0').checked = true;

            document.getElementById('ifOther').style.display = 'none';

            document.getElementById('ifOther2').style.display = 'none';
        }

    }
</script>

<div class="row">
    <div class="col-sm-12">

        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">รายงานไปรษณีย์รายเดือน</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>

           
            <div class="box-body">

                @using (Html.BeginForm("ReportPostel"
                            , "CR"
                            , FormMethod.Post
                            , new { enctype = "multipart/form-data" }))
                {

                <div class="form-group">
                    <div class="radio col-sm-12">
                        <label>
                            <input type="radio" name="optionsRadios2" id="Radios2" checked value="1" onclick="javascript:yesnoCheck2();">
                            สรุปการส่งจดหมาย
                        </label>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <label>
                            <input type="radio" name="optionsRadios2" id="Radios3" value="2" onclick="javascript:yesnoCheck2();">
                            ใบขอเบิกค่าใช้จ่าย
                        </label>
                    </div>
                    <br />
                    <br />
                    <div class="" id="ifOther3" style="display:none">
                        <br />
                        <label class="col-sm-12">ระบุวันที่โอนเงินเข้าบัญชีไปรษณีย์</label>
                        <input class="form-control" type="date" name="date" value="@DateTime.Now" />
                    </div>
                    <div class="radio col-sm-12" id="ifOther5">
                        <label>
                            <input type="radio" name="optionsRadios0" id="Radios0" checked value="0" onclick="javascript:yesnoCheck();">
                            เลือกทีละเดือน
                        </label>
                    </div>
                    <br />
                    <div class="radio col-sm-12" id="ifOther6">
                        <label>
                            <input type="radio" name="optionsRadios0" id="Radios1" value="1" onclick="javascript:yesnoCheck();">
                            เลือกหลายเดือน
                        </label>
                    </div>
                    <div class="" id="ifOther4" style="display:none">
                        <input type="radio" name="optionsRadios0" id="Radios4" value="0" hidden/>
                    </div>
                </div>
                <div id="ifOther7">
                    <br  />
                    <br  />
                    <br  />
                </div>
                    
                    <div class="form-group">
                        <div class="" id="ifOther" style="display:none">
                            <label class="col-sm-12">-------------------------------------&emsp;&emsp;ตั้งแต่&emsp;&emsp;-------------------------------------</label>
                            <br />
                            <br />
                        </div>
                        <label class="col-sm-1">เดือน :</label>
                        <div class="col-sm-2">
                            <select class="form-control" name="month1" required aria-describedby="example2_info">
                                <option value="">-----เลือก-----</option>
                                <option value="1">มกราคม</option>
                                <option value="2">กุมภาพันธ์</option>
                                <option value="3">มีนาคม</option>
                                <option value="4">เมษายน</option>
                                <option value="5">พฤษภาคม</option>
                                <option value="6">มิถุนายน</option>
                                <option value="7">กรกฎาคม</option>
                                <option value="8">สิงหาคม</option>
                                <option value="9">กันยายน</option>
                                <option value="10">ตุลาคม</option>
                                <option value="11">พฤศจิกายน</option>
                                <option value="12">ธันวาคม</option>
                            </select>
                        </div>
                        <label class="control-label col-sm-1">ปี :</label>
                        <div class="col-sm-2">
                            <select class="form-control" name="year1" aria-describedby="example2_info">
                                <option value="/2021">2021</option>
                                <option value="/2022" selected>2022</option>
                                <option value="/2023">2023</option>
                                <option value="/2024">2024</option>
                                <option value="/2025">2025</option>
                            </select>
                        </div>
                        <br />
                    </div>
                    <div class="form-group" id="ifOther2" style="display:none">
                        <br />
                        <label class="col-sm-12">---------------------------------------&emsp;&emsp;ถึง&emsp;&emsp;---------------------------------------</label>
                        <br />
                        <br />
                        <label class="col-sm-1">เดือน :</label>
                        <div class="col-sm-2">
                            <select class="form-control" name="month2" aria-describedby="example2_info">
                                <option value="">-----เลือก-----</option>
                                <option value="1">มกราคม</option>
                                <option value="2">กุมภาพันธ์</option>
                                <option value="3">มีนาคม</option>
                                <option value="4">เมษายน</option>
                                <option value="5">พฤษภาคม</option>
                                <option value="6">มิถุนายน</option>
                                <option value="7">กรกฎาคม</option>
                                <option value="8">สิงหาคม</option>
                                <option value="9">กันยายน</option>
                                <option value="10">ตุลาคม</option>
                                <option value="11">พฤศจิกายน</option>
                                <option value="12">ธันวาคม</option>
                            </select>
                        </div>
                        <label class="control-label col-sm-1">ปี :</label>
                        <div class="col-sm-2">
                            <select class="form-control" name="year2" aria-describedby="example2_info">
                                <option value="/2021">2021</option>
                                <option value="/2022" selected>2022</option>
                                <option value="/2023">2023</option>
                                <option value="/2024">2024</option>
                                <option value="/2025">2025</option>
                            </select>
                        </div>
                        <br />
                    </div>
                    <br />
                    <div class="radio col-sm-12">
                        <label>
                            <input type="radio" name="optionsRadios1" id="optionsRadios1" checked value="1">
                            Report (PDF)
                        </label>
                    </div>
                    <div class="radio col-sm-12">
                        <label>
                            <input type="radio" name="optionsRadios1" id="optionsRadios1" value="2">
                            Report (Excel)
                        </label>
                    </div>

                    <br />
                    <button type="submit" class="btn btn-info col-sm-1">Submit</button>

                    <br />

                }
            </div>
                

        </div>
    </div>
</div>