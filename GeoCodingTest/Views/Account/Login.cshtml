@{
    Layout = null;
}

@Html.Raw(TempData["msg"])

<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script type="text/javascript">

    function remember() {

        if ($('#rememberMe').is(':checked')) {
            // save username and password
            localStorage.userName = $('#id').val();
            localStorage.password = $('#password').val();
            localStorage.checkBoxValidation = $('#rememberMe').val();
        } else {
            localStorage.userName = '';
            localStorage.password = '';
            localStorage.checkBoxValidation = '';
        }
    }

    function loadremember() {

        if (localStorage.length != 0) {
            if (localStorage.userName != '' && localStorage.password != '' && localStorage.checkBoxValidation != '') {
                document.getElementById("id").value = localStorage.userName;
                document.getElementById("password").value = localStorage.password;
                document.getElementById("rememberMe").checked = true;
            }
        }
    }
</script>

