@{
    /**/
    Layout = null;
}

<link href="~/Content/LoginCSS.css" rel="stylesheet" />

<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<!--Pulling Awesome Font -->
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
    @using (Html.BeginForm("LoginCheck"
                            , "Account"
                            , FormMethod.Post
                            , new { id = "oForm" }))
    {
        <div class="row">
            <div class="col-sm-offset-4 col-md-3">
                <div class="form-login">
                    <h4>Welcome back.</h4>
                    <input type="text" id="userName" name="ID" class="form-control input-sm chat-input" placeholder="user id" autofocus>
                    <br>
                    <input type="password" id="userPassword" name="Password" class="form-control input-sm chat-input" placeholder="password">
                    <br>
                    <div class="wrapper">
                        <span class="group-btn">
                            <button class="btn btn-primary btn-md" id="TextboxId" type="submit" value="Add" name="Button">login <i class="fa fa-sign-in"></i></button>
                        </span>
                    </div>
                </div>

            </div>
        </div>
    }
</div>


<script type="text/javascript">
$(document).ready(function(){
    $('#TextBoxId').keypress(function(e){
      if(e.keyCode==13)
      $('#linkadd').click();
    });
});
</script>