<form id="form1" runat="server">
    <div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript">

        var checkbox;
        var remark;
        var name;
        var code;
        var job;
        var radio1;
        var price;
        var weight;
        function getLocation() {


            code = document.getElementById("Code").innerText;
            name = document.getElementById("Name").innerText;
            remark = document.getElementById("Remark").value;
            if (document.getElementById('radio1').checked) {
                job = document.getElementById('order1').value;
                radio1 = 5;
                checkbox = $('input[name="radio0"]:checked').val();
                weight = -1;
                price = -1;
            }
            else if (document.getElementById('radio2').checked) {
                job = "ไปรษณีย์";
                radio1 = 6;
                checkbox = "";
                weight = document.getElementById('radio4').value;
                price = document.getElementById('radio5').value;
            }

            var message1 = "ยืนยันการบันทึก?";
            var r = confirm(message1);

            if (r == true) {
                    if (name != "" && checkbox != null && weight != 0 && price != 0) {
                        if (navigator.geolocation) {
                            navigator.geolocation.getCurrentPosition(showPosition, showError);
                        }
                        else { alert("Geolocation is not supported by this browser."); }
                    }
                    else {
                        alert("ตัวเลือกห้ามว่าง!!");
                    }
            }
            else {

            }
        }

        function showPosition(position) {

            $.ajax({
                url: '@Url.Action("getOnline","GeoCoding")',
                type: "POST",
                dataType: "json",
                data: JSON.stringify({

                    location: "Latitude: " + position.coords.latitude +
                        ",Longitude: " + position.coords.longitude + ",Accuracy:" + position.coords.accuracy + ","
                        + name + "," + code + "," + checkbox ,
                    Remark: remark,
                    ID: job,
                    Radio1: radio1,
                    Price: price,
                    Weight: weight
                }),
                contentType: 'application/json',
                complete: function () {
                    //alert('Success!');
                    window.location.href = '/Home/Index/';
                }
            });

        }
        function checkType() {
            
            if (document.getElementById('radio1').checked) {
                document.getElementById('Type6').style.display = 'none';
                document.getElementById('Type5').style.display = 'block';
                document.getElementById('order').style.display = 'block';
            }
            else if (document.getElementById('radio2').checked) {
                document.getElementById('Type6').style.display = 'block';
                document.getElementById('Type5').style.display = 'none';
                document.getElementById('order').style.display = 'none';
            }

        }
        function showError(error) {
            switch (error.code) {
                case error.PERMISSION_DENIED:
                    x.innerHTML = "User denied the request for Geolocation."
                    break;
                case error.POSITION_UNAVAILABLE:
                    x.innerHTML = "Location information is unavailable."
                    break;
                case error.TIMEOUT:
                    x.innerHTML = "The request to get user location timed out."
                    break;
                case error.UNKNOWN_ERROR:
                    x.innerHTML = "An unknown error occurred."
                    break;
            }

            window.location.href = '/GeoCoding/Online/';
        }

    </script>
</form>

